    <%= f.label :player1_score %><br>
    <%= f.text_field :player1_score %>
  </div>
  <%= f.hidden_field :player1_id, :value => current_user.id %>
  <div class="field">
    <%= f.label :player2_score %><br>
    <%= f.text_field :player2_score %>
  </div>
  <div class="field">
    <%= f.label :player2_id %><br>
    <%= f.select :player2_id, options_for_select(User.all.map{|s|[s.email, s.id]})  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
